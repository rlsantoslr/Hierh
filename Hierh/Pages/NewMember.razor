@page "/dashboard/newmember"
@inherits LayoutComponentBase
<PageTitle>Hierh - Novo membro</PageTitle>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header bg-white p-3">
                <strong class="text-secondary">Novo membro</strong>
                <br />
                <small>NOTA: O usuário só será adicionado caso ele aceite compartilhar com você as informações que estão no FIRH</small>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6 form-group">
                        <label>CPF</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="col-lg-6 form-group">
                        <label>O membro é o que seu?</label>
                        <input type="text" class="form-control" placeholder="Tio, tia, pai, mãe ou etc" />
                    </div>
                </div>
                <div class="row my-2">
                    <div class="col-lg-12">
                        <a href="/dashboard" class="btn btn-sm btn-secondary">Convidar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
